{% extends 'base.html.twig' %}

{% block title %}Page de user.fullName{% endblock %}

{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="col-3 text-center">
                <img src="{{ user.picture }}" class="avatar mb-3" alt="Avatar de {{ user.fullName }}">
                <br>
                <span class="badge bg-secondary">
                    {{ user.tricks | length }} figures
                </span>
            </div>
            <div class="col-9">
                <h1>{{ user.fullName }}</h1>
                {% if user is same as (app.user) %}
                    <div class="mt-3">
                        <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="mt-3">
            {{ user.description | raw }}
        </div>
        <hr>
        <h2>Les figures de {{ user.fullname }}</h2>
        {% if user.tricks | length > 0 %}
            <div class="row">
                <ul id="lightSlider">
                {% for trick in user.tricks %}

                        <li>
                            <a href="{{ path('tricks_show', {'slug': trick.slug})}}">
                                <img src="{{ trick.coverImage }}" alt="image">
                            </a>
                        </li>
                {% endfor %}
                </ul>
            </div>
        {% else %}
            <div class="alert-alert-warning">
                <p>
                    <strong>{{ user.fullName }} n'a pas encore de figures sur le site</strong>
                </p>
            </div>
        {% endif %}

    </div>
{% endblock %}
